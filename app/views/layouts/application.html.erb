<!DOCTYPE html>
<html>
  <head>
    <title>PayjpGithublogin</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <% flash.each do |_, value| %>
      <p><%= value %></p>
    <% end %>
    <% if logged_in? %>
      <%= link_to 'ログアウト', logout_path, method: :delete %>
    <% end %>
    <%= yield %>
  </body>
</html>
